{
  "nodeModulesDir": "auto",
  "tasks": {
    "fmt": "deno run -A npm:prettier --write src/ test/ mod.ts deploy.ts deps.ts",
    "lint": "deno run -A npm:eslint src/ test/ mod.ts deploy.ts deps.ts",
    "check": "deno run -A --check mod.ts",
  },
  "name": "@harmony/harmony",
  "version": "2.9.2",
  "exports": "./mod.ts",
  "publish": {
    "include": [
      "mod.ts",
      "deps.ts",
      "deploy.ts",
      "src/**/*",
      "assets/*",
      "README.md",
      "tsconfig.json",
      "deno.json"
    ]
  },
  "compilerOptions": {
    "lib": [
      "deno.ns",      
      "deno.window",  
      "esnext"        
    ]
  }
}
